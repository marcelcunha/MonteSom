<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MonteSomPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.model.entidades.Usuario</class>
    <class>com.model.entidades.Montadora</class>
    <class>com.model.entidades.Veiculo</class>
    <class>com.model.entidades.Modelo</class>
    <class>com.model.entidades.GrupoVeiculo</class>
    <class>com.model.entidades.Fabricante</class>
    <class>com.model.entidades.Categoria</class>
    <class>com.model.entidades.Grupo</class>
    <class>com.model.entidades.Prateleira</class>
    <class>com.model.entidades.Produto</class>
    <class>com.model.entidades.Estoque</class>
    <properties>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/MonteSom"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="zero"/>
    </properties>
  </persistence-unit>
</persistence>
